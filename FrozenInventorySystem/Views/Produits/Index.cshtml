                        <td>Poisson</td>
                        <td>90.50 DH</td>
                        <td>25</td>
                        <td>15</td>
                        <td>
                            <span class="badge bg-success">Disponible</span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-info" title="Détails" onclick="showProductDetails(2)">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-sm btn-warning" title="Modifier" onclick="editProduct(2)">
                                <i class="bi bi-pencil"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>PROD003</td>
                        <td>Lait Entier</td>
                        <td>Laitier</td>
                        <td>8.75 DH</td>
                        <td>50</td>
                        <td>30</td>
                        <td>
                            <span class="badge bg-success">Disponible</span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-info" title="Détails" onclick="showProductDetails(3)">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-sm btn-warning" title="Modifier" onclick="editProduct(3)">
                                <i class="bi bi-pencil"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>PROD004</td>
                        <td>Tomates</td>
                        <td>Légume</td>
                        <td>4.20 DH</td>
                        <td>10</td>
                        <td>25</td>
                        <td>
                            <span class="badge bg-warning">Stock Faible</span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-info" title="Détails" onclick="showProductDetails(4)">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-sm btn-warning" title="Modifier" onclick="editProduct(4)">
