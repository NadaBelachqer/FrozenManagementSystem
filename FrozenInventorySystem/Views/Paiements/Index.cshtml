@{
    ViewBag.Title = "Gestion des Paiements";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Gestion des Paiements</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                    <li class="breadcrumb-item active">Paiements</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>18,230<sup style="font-size: 20px">DH</sup></h3>
                        <p>Chiffre d'affaires</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-cash"></i>
                    </div>
                    <a href="#" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>53<sup style="font-size: 20px">%</sup></h3>
                        <p>Taux de réussite</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>44</h3>
                        <p>Transactions en attente</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-clock"></i>
                    </div>
                    <a href="#" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>12</h3>
                        <p>Paiements en échec</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-alert-circled"></i>
                    </div>
                    <a href="#" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-7 connectedSortable">
                <!-- Dernières transactions -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Derniers Paiements</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table m-0">
                                <thead>
                                    <tr>
                                        <th>ID Paiement</th>
                                        <th>Client</th>
                                        <th>Montant</th>
                                        <th>Date</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><a href="#">BXY3642</a></td>
                                        <td>Mohamed Ali</td>
                                        <td>1,200 DH</td>
                                        <td>15/06/2023</td>
                                        <td><span class="badge badge-success">Complété</span></td>
                                    </tr>
                                    <tr>
                                        <td><a href="#">BXY1848</a></td>
                                        <td>Fatima Zahra</td>
                                        <td>2,500 DH</td>
                                        <td>14/06/2023</td>
                                        <td><span class="badge badge-warning">En attente</span></td>
                                    </tr>
                                    <tr>
                                        <td><a href="#">BXY2429</a></td>
                                        <td>Karim Benzena</td>
                                        <td>3,750 DH</td>
                                        <td>13/06/2023</td>
                                        <td><span class="badge badge-success">Complété</span></td>
                                    </tr>
                                    <tr>
                                        <td><a href="#">BXY2428</a></td>
                                        <td>Leila Smith</td>
                                        <td>1,800 DH</td>
                                        <td>12/06/2023</td>
                                        <td><span class="badge badge-danger">Échoué</span></td>
                                    </tr>
                                    <tr>
                                        <td><a href="#">BXY2427</a></td>
                                        <td>Ahmed Khan</td>
                                        <td>950 DH</td>
                                        <td>11/06/2023</td>
                                        <td><span class="badge badge-info">En traitement</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer clearfix">
                        <a href="javascript:void(0)" class="btn btn-sm btn-info float-left">Nouveau Paiement</a>
                        <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right">Voir tous les paiements</a>
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </section>
            <!-- /.Left col -->
            <!-- right col -->
            <section class="col-lg-5 connectedSortable">
                <!-- Graphique camembert -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Statistiques des Paiements</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvas id="pieChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer bg-white">
                        <div class="row">
                            <div class="col-4 text-center">
                                <div style="display:inline;width:60px;height:60px;">
                                    <canvas width="60" height="60" style="width: 60px; height: 60px;"></canvas>
                                </div>
                                <div class="text-muted">20% Mobile</div>
                            </div>
                            <!-- ./col -->
                            <div class="col-4 text-center">
                                <div style="display:inline;width:60px;height:60px;">
                                    <canvas width="60" height="60" style="width: 60px; height: 60px;"></canvas>
                                </div>
                                <div class="text-muted">50% Desktop</div>
                            </div>
                            <!-- ./col -->
                            <div class="col-4 text-center">
                                <div style="display:inline;width:60px;height:60px;">
                                    <canvas width="60" height="60" style="width: 60px; height: 60px;"></canvas>
                                </div>
                                <div class="text-muted">30% Tablet</div>
                            </div>
                            <!-- ./col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </section>
            <!-- right col -->
        </div>
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
<!-- OverlayScrollbars -->
<script src="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.10.1/browser/overlayscrollbars.browser.es6.min.js"></script>

<!-- Popper.js pour Bootstrap -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.8/umd/popper.min.js"></script>

<!-- Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- AdminLTE -->
<script src="@Url.Content("~/Content/dist/js/adminlte.js")"></script>

@section scripts {
    <!-- ApexCharts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.37.1/dist/apexcharts.min.js"></script>
   

    <script>
        $(function () {
            // Pie Chart
            var pieChartCanvas = $('#pieChart').get(0).getContext('2d')
            var pieData = {
                labels: [
                    'Complétés',
                    'En attente',
                    'Échoués',
                    'En traitement'
                ],
                datasets: [
                    {
                        data: [700, 500, 300, 100],
                        backgroundColor: [
                            '#28a745',
                            '#ffc107',
                            '#dc3545',
                            '#17a2b8'
                        ],
                    }
                ]
            }
            var pieOptions = {
                maintainAspectRatio: false,
                responsive: true,
            }
            new Chart(pieChartCanvas, {
                type: 'pie',
                data: pieData,
                options: pieOptions
            })

            // Mini charts
            var miniChart1 = $('.col-4:eq(0) canvas').get(0).getContext('2d')
            new Chart(miniChart1, {
                type: 'doughnut',
                data: {
                    datasets: [{
                        data: [20, 80],
                        backgroundColor: ['#17a2b8', '#f8f9fa']
                    }],
                    labels: ['Mobile', '']
                },
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                    cutoutPercentage: 75,
                    legend: { display: false },
                    tooltips: { enabled: false }
                }
            })

            var miniChart2 = $('.col-4:eq(1) canvas').get(0).getContext('2d')
            new Chart(miniChart2, {
                type: 'doughnut',
                data: {
                    datasets: [{
                        data: [50, 50],
                        backgroundColor: ['#28a745', '#f8f9fa']
                    }],
                    labels: ['Desktop', '']
                },
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                    cutoutPercentage: 75,
                    legend: { display: false },
                    tooltips: { enabled: false }
                }
            })

            var miniChart3 = $('.col-4:eq(2) canvas').get(0).getContext('2d')
            new Chart(miniChart3, {
                type: 'doughnut',
                data: {
                    datasets: [{
                        data: [30, 70],
                        backgroundColor: ['#ffc107', '#f8f9fa']
                    }],
                    labels: ['Tablet', '']
                },
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                    cutoutPercentage: 75,
                    legend: { display: false },
                    tooltips: { enabled: false }
                }
            })
        })
    </script>
}