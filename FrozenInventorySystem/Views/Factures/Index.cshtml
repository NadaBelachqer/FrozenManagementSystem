@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        $(document).ready(function () {
            // Initialisation des graphiques
            initCharts();

            // Initialisation de DataTable
            $('#recentInvoicesTable').DataTable({
                responsive: true,
                ordering: false,
                dom: '<"top"f>rt<"bottom"ip><"clear">',
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json'
                }
            });

            $('#billsToInvoiceTable').DataTable({
                responsive: true,
                ordering: false,
                dom: '<"top"f>rt<"bottom"ip><"clear">',
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json'
                }
            });

            // Gestion des cases à cocher pour le total
            $('input[type="checkbox"]').on('change', function () {
                calculateInvoiceTotal();
            });
        });

        function initCharts() {
            // Graphique de revenus
            var ctx = document.getElementById('revenueChart').getContext('2d');
            var revenueChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin', 'Juil', 'Août', 'Sep', 'Oct', 'Nov', 'Déc'],
                    datasets: [{
                        label: 'Chiffre d\'Affaires',
                        data: [185000, 192000, 210000, 198000, 235000, 245000, 248750, 0, 0, 0, 0, 0],
                        backgroundColor: 'rgba(78, 115, 223, 0.05)',
                        borderColor: 'rgba(78, 115, 223, 1)',
                        pointBackgroundColor: 'rgba(78, 115, 223, 1)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgba(78, 115, 223, 1)',
                        tension: 0.3
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function (value) {
                                    return value.toLocaleString() + ' DH';
                                }
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    return context.dataset.label + ': ' + context.raw.toLocaleString() + ' DH';
                                }
                            }
                        }
                    }
                }
            });

            // Graphique camembert clients
            var ctx2 = document.getElementById('clientPieChart').getContext('2d');
            var clientPieChart = new Chart(ctx2, {
                type: 'doughnut',
                data: {
                    labels: ['Client Premium', 'Client Standard', 'Client VIP', 'Autres Clients'],
                    datasets: [{
                        data: [35, 25, 30, 10],
                        backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e'],
                        hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf', '#dda20a'],
                        hoverBorderColor: "rgba(234, 236, 244, 1)",
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    var label = context.label || '';
                                    var value = context.raw || 0;
                                    var total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    var percentage = Math.round((value / total) * 100);
                                    return label + ': ' + percentage + '% (' + value.toLocaleString() + ' DH)';
                                }
                            }
                        }
                    },
                    cutout: '80%',
                },
            });
        }

        function calculateInvoiceTotal() {
            var subtotal = 0;

            $('#billsToInvoiceTable tbody tr').each(function () {
                if ($(this).find('input[type="checkbox"]').is(':checked')) {
                    var rowTotal = $(this).find('td:eq(6)').text();
                    rowTotal = parseFloat(rowTotal.replace(/[^0-9.-]+/g, ""));
                    subtotal += rowTotal;
                }
            });

            var tax = subtotal * 0.2;
            var total = subtotal + tax;

            $('#subtotalAmount').text(subtotal.toLocaleString('fr-FR', { minimumFractionDigits: 2 }) + ' DH');
            $('#taxAmount').text(tax.toLocaleString('fr-FR', { minimumFractionDigits: 2 }) + ' DH');
            $('#totalAmount').text(total.toLocaleString('fr-FR', { minimumFractionDigits: 2 }) + ' DH');
        }

