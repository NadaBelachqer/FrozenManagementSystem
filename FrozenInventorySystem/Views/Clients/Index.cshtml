<!-- Modal pour ajouter/modifier un client -->
<div class="modal fade" id="clientModal" tabindex="-1" aria-labelledby="clientModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="clientModalLabel">Nouveau Client</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="clientForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="code" class="form-label">Code Client</label>
                                <input type="text" class="form-control" id="code" required>
                            </div>
                            <div class="mb-3">
                                <label for="nom" class="form-label">Nom Complet</label>
                                <input type="text" class="form-control" id="nom" required>
                            </div>
                            <div class="mb-3">
                                <label for="ncin" class="form-label">N° CIN</label>
                                <input type="text" class="form-control" id="ncin">
                            </div>
                            <div class="mb-3">
                                <label for="contact" class="form-label">Personne de Contact</label>
                                <input type="text" class="form-control" id="contact" required>
                            </div>
                            <div class="mb-3">
                                <label for="patente" class="form-label">N° Patente</label>
                                <input type="text" class="form-control" id="patente">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="ice" class="form-label">ICE</label>
                                <input type="text" class="form-control" id="ice" required>
                            </div>
                            <div class="mb-3">
                                <label for="identFisc" class="form-label">Identifiant Fiscal</label>
                                <input type="text" class="form-control" id="identFisc">
                            </div>
                            <div class="mb-3">
                                <label for="ville" class="form-label">Ville</label>
                                <select class="form-select" id="ville" required>
                                    <option value="">Sélectionner une ville</option>
                                    <option value="1">Casablanca</option>
                                    <option value="2">Rabat</option>
                                    <option value="3">Tanger</option>
                                    <option value="4">Marrakech</option>
                                    <option value="5">Fès</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="adresse" class="form-label">Adresse</label>
                                <textarea class="form-control" id="adresse" rows="2"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="telephone" class="form-label">Téléphone</label>
                                <input type="tel" class="form-control" id="telephone" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="fax" class="form-label">Fax</label>
                                <input type="tel" class="form-control" id="fax">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="compteBancaire" class="form-label">Compte Bancaire</label>
                                <input type="text" class="form-control" id="compteBancaire">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="plafond" class="form-label">Plafond (DH)</label>
                                <input type="number" class="form-control" id="plafond" min="0" step="0.01" value="0">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="bloque">
                                <label class="form-check-label" for="bloque">Client bloqué</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="saveClient">Enregistrer</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour les filtres -->
<div class="modal fade" id="filtresModal" tabindex="-1" aria-labelledby="filtresModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filtresModalLabel">Filtrer les clients</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="filtresForm">
                    <div class="mb-3">
                        <label for="filtreVille" class="form-label">Ville</label>
                        <select class="form-select" id="filtreVille">
                            <option value="">Toutes les villes</option>
                            <option value="1">Casablanca</option>
                            <option value="2">Rabat</option>
                            <option value="3">Tanger</option>
                            <option value="4">Marrakech</option>
                            <option value="5">Fès</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="filtreStatut" class="form-label">Statut</label>
                        <select class="form-select" id="filtreStatut">
                            <option value="">Tous les statuts</option>
                            <option value="actif">Actif</option>
                            <option value="debit">En débit</option>
                            <option value="bloque">Bloqué</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="filtreSoldeMin" class="form-label">Solde minimum (DH)</label>
                        <input type="number" class="form-control" id="filtreSoldeMin" step="0.01">
                    </div>
                    <div class="mb-3">
                        <label for="filtreSoldeMax" class="form-label">Solde maximum (DH)</label>
                        <input type="number" class="form-control" id="filtreSoldeMax" step="0.01">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="appliquerFiltres">Appliquer</button>
                <button type="button" class="btn btn-outline-danger" id="reinitialiserFiltres">Réinitialiser</button>
            </div>
        </div>
    </div>
</div>


<!-- Section des graphiques -->
<div class="row">
    <!-- Répartition par ville -->
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title">Répartition des clients par ville</h5>
            </div>
            <div class="card-body">
                <div id="clientsParVilleChart" style="min-height: 300px;"></div>
            </div>
        </div>
    </div>

    <!-- Statut des clients -->
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="card-title">Statut des clients</h5>
            </div>
            <div class="card-body">
                <div id="statutClientsChart" style="min-height: 300px;"></div>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <!-- Évolution des nouveaux clients -->
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="card-title">Nouveaux clients (6 derniers mois)</h5>
            </div>
            <div class="card-body">
                <div id="evolutionClientsChart" style="min-height: 300px;"></div>
            </div>
        </div>
    </div>

    <!-- Répartition par solde -->
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="card-title">Répartition par solde</h5>
            </div>
            <div class="card-body">
                <div id="soldeClientsChart" style="min-height: 300px;"></div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <!-- ApexCharts -->
