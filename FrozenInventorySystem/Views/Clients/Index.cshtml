                xaxis: {
                    categories: ['Casablanca', 'Rabat', 'Tanger', 'Marrakech', 'Fès', 'Autres'],
                },
                yaxis: {
                    title: {
                        text: 'Nombre de clients'
                    }
                },
                tooltip: {
                    y: {
                        formatter: function (val) {
                            return val + " clients"
                        }
                    }
                }
            };
            var clientsParVilleChart = new ApexCharts(document.querySelector("#clientsParVilleChart"), clientsParVilleOptions);
            clientsParVilleChart.render();

            // 2. Graphique de statut des clients (Donut)
            var statutClientsOptions = {
                series: [65, 15, 20],
                labels: ['Actifs', 'En débit', 'Bloqués'],
                chart: {
                    type: 'donut',
                    height: 350
                },
                colors: ['#10b981', '#f59e0b', '#ef4444'],
                legend: {
                    position: 'bottom'
                },
                responsive: [{
                    breakpoint: 480,
                    options: {
                        chart: {
                            width: '100%'
                        },
                        legend: {
                            position: 'bottom'
                        }
                    }
                }],
                plotOptions: {
                    pie: {
                        donut: {
                            labels: {
                                show: true,
                                total: {
                                    show: true,
                                    label: 'Total',
                                    formatter: function (w) {
                                        return w.globals.seriesTotals.reduce((a, b) => a + b, 0)
                                    }
                                }
                            }
                        }
                    }
                }
            };
            var statutClientsChart = new ApexCharts(document.querySelector("#statutClientsChart"), statutClientsOptions);
            statutClientsChart.render();

            // 3. Graphique d'évolution des nouveaux clients (Ligne)
            var evolutionClientsOptions = {
                series: [{
                    name: "Nouveaux clients",
                    data: [12, 15, 8, 10, 18, 22]
                }],
                chart: {
                    height: 350,
                    type: 'line',
                    zoom: {
                        enabled: false
                    },
                    toolbar: { show: false }
                },
                colors: ['#10b981'],
                dataLabels: {
                    enabled: false
                },
                stroke: {
                    curve: 'smooth',
                    width: 3
                },
                xaxis: {
                    categories: ["Jan", "Fév", "Mar", "Avr", "Mai", "Jun"],
                },
                yaxis: {
                    title: {
                        text: "Nombre de clients"
                    }
                },
                tooltip: {
                    y: {
                        formatter: function (val) {
                            return val + " nouveaux clients"
                        }
                    }
                }
            };
            var evolutionClientsChart = new ApexCharts(document.querySelector("#evolutionClientsChart"), evolutionClientsOptions);
            evolutionClientsChart.render();

            // 4. Graphique de répartition par solde (Barres horizontales)
            var soldeClientsOptions = {
                series: [{
                    name: 'Nombre de clients',
                    data: [45, 22, 15, 8, 5]
                }],
                chart: {
                    type: 'bar',
                    height: 350,
                    toolbar: { show: false }
                },
                plotOptions: {
                    bar: {
                        borderRadius: 4,
                        horizontal: true,
                    },
                },
                colors: ['#f59e0b'],
                dataLabels: {
                    enabled: false
                },
                xaxis: {
                    categories: ['0-5,000 DH', '5,001-10,000 DH', '10,001-20,000 DH', '20,001-50,000 DH', '50,000+ DH'],
                    title: {
                        text: 'Nombre de clients'
                    }
                },
                yaxis: {
                    title: {
                        text: 'Tranches de solde'
                    }
                },
                tooltip: {
                    y: {
                        formatter: function (val) {
                            return val + " clients"
                        }
                    }
                }
            };
            var soldeClientsChart = new ApexCharts(document.querySelector("#soldeClientsChart"), soldeClientsOptions);
            soldeClientsChart.render();


            // Gestion des filtres
            $('#appliquerFiltres').click(function () {
                var ville = $('#filtreVille').val();
                var statut = $('#filtreStatut').val();
                var soldeMin = $('#filtreSoldeMin').val();
                var soldeMax = $('#filtreSoldeMax').val();

                // Ici, vous implémenteriez la logique de filtrage
                // Exemple simplifié :
                table.column(5).search(ville).draw(); // Filtre par ville
                $('#filtresModal').modal('hide');
            });

            $('#reinitialiserFiltres').click(function () {
                $('#filtresForm')[0].reset();
                table.search('').columns().search('').draw();
            });
        });
    </script>
}